{
    "name":                 "splash/console",
    "description":          "Console Application for All Splash Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "bin": ["bin/splash"],

    "autoload": {
        "psr-4": { 
            "Splash\\Console\\": "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\Console\\Test\\": "tests/"
        }
    },

    "require": {
        "php":                                      "^7.4|^8.0",
        "splash/phpcore":                           "^2.0",
        "symfony/console":                          "^4.4|^5.4"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                        "^2.0",

        "splash/php-bundle":                        "^2.0",
        "splash/faker":                             "^2.0",

        "symfony/http-kernel":                      "^5.4",
        "symfony/security-bundle":                  "^5.4",
        "symfony/http-foundation":                  "^5.4",
        "symfony/property-info":                    "^5.4",
        "symfony/twig-bundle":                      "^5.4",
        "symfony/runtime":                          "^5.4",
        "symfony/debug-pack":                       "^1.0",
        "symfony/monolog-bundle":                   "*",
        "monolog/monolog":                          "^1.0|^2.0",

        "doctrine/orm":                             "^2.6",
        "doctrine/annotations":                     "^2.0",
        "doctrine/doctrine-bundle":                 "^2.10"
    },

    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console cache:clear --env=test",
            "php bin/console doctrine:schema:update --force --complete --no-interaction --no-debug",
            "find var/cache/dev/*.xml | while read -r i; do cp \"$i\" var/cache/dev/testContainer.xml; done"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "config": {
        "allow-plugins": {
            "phpro/grumphp":        true,
            "symfony/runtime":      true
        }
    },

    "archive": {
        "exclude": ["/docs", "/tests"]
    },

    "extra": {
        "public-dir": "tests/public"
    }
}

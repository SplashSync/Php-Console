{
    "name":                 "splash/console",
    "description":          "Console Application for All Splash Php Applications",

    "type":                 "package",    
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "license":              "MIT",

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "bin": ["bin/splash"],

    "autoload": {
        "psr-4": { 
            "Splash\\Console\\": "src/"
        }
    },
    
    "autoload-dev": {
        "classmap": [ "tests/Kernel.php" ]
    },

    "require": {
        "php":                                      "~7.1",
        "symfony/console":                          "~3.4|~4.0"
    },
    
    "require-dev": {
        "symfony/symfony":                          "~3.4",
        "symfony/monolog-bundle":                   "*",
        
        "doctrine/doctrine-bundle":                 "^1.6",
        "doctrine/orm":                             "^2.5",        
        
        "splash/phpcore":                           "dev-master", 
        "splash/faker":                             "dev-master",
        "splash/php-bundle":                        "dev-master",
        
        "phpunit/phpunit":                          "~6.0|~7.0|~8.0",
        "composer/composer":                        "^1.5",
        "j13k/yaml-lint":                           "^1.1",
        "jakub-onderka/php-parallel-lint":          "^1.0",
        "phpmd/phpmd":                              "^2.6",
        "phpro/grumphp":                            "~0.15",
        "sclable/xml-lint":                         "^0.2.4",
        "sebastian/phpcpd":                         ">3.0",
        "seld/jsonlint":                            "^1.7",
        "sensiolabs/security-checker":              "^5.0",
        "friendsofphp/php-cs-fixer":                ">2.10", 
        "squizlabs/php_codesniffer":                "^3.2",
        "phpstan/phpstan":                          "~0.10",
        "phpstan/phpstan-phpunit":                  "~0.10"
    },
    
    "conflict": {
        "phpro/grumphp":                            "<0.16"
    }     
}
